{
	"name": "efiencrypt",
	"version": "1.1.1",
	"description": "Encrypts an EFI binary using a hash derived from user-defined data (random data, disk sectors, SMBIOS fields, EFI variables, ...). The resulting EFI can also optionally embed secure boot keys to enroll if the system is in setup mode.",
	"type": "module",
	"private": true,
	"license": "MIT",
	"bin": {
		"efiencrypt": "dist/efiencrypt"
	},
	"repository": {
		"url": "https://github.com/davdiv/efiencrypt"
	},
	"keywords": [
		"uefi",
		"encrypt",
		"efi",
		"secure-boot",
		"smbios"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./smbios": {
			"types": "./dist/smbios.d.ts",
			"default": "./dist/smbios.js"
		},
		"./schema.json": "./dist/schema.json"
	},
	"scripts": {
		"prepare": "npm run build",
		"ci": "npm run build && npm run ts:check && npm test && npm run lint && npm run format:check",
		"ts:check": "tsc -p tsconfig.json",
		"lint": "eslint .",
		"build": "vite build && tsc -p tsconfig.api.json",
		"format:check": "prettier . --list-different",
		"format:fix": "prettier . --write",
		"test": "bash ./test/test.sh"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@types/node": "^25.0.3",
		"ajv": "^8.17.1",
		"commander": "^14.0.2",
		"eslint": "^9.39.2",
		"prettier": "^3.7.4",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.51.0",
		"typescript-json-schema": "^0.67.1",
		"vite": "^7.3.0"
	}
}
